extends baseEmail

block content
  p Hi #{firstName},
  p Here is your #{topic} ID: #{data[0]}.
  p Please do not share it with anyone.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${data[1]}`, target='_blank') VIEW MY #{topic}S PAGE
  p If you didn't create this #{topic}, please ignore this email!